.YmContent {
  height: 100%;
  width: 100%;
  background-color: #F0AD4E !important;
}
.YmContent text:first-of-type {
  font-size: 20px;
  color: #FFFFFF;
}
.YmContent text {
  font-size: 30rpx;
  display: inline-block;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 30rpx;
}
label {
  font-size: 30rpx;
  padding-right: 30rpx;
}
.error {
  font-size: 0.85rem;
  color: #FF2400;
}
.input_css {
  border: 1rpx solid #AAA;
  border-radius: 15rpx;
  padding: 10rpx 5rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.btn {
  width: 80%;
  margin: 0 auto;
  color: #000000;
  font-size: 0.9rem;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-radius: 15rpx;
  font-weight: bold;
  text-align: center;
  background-color: #F0AD4E;
}

