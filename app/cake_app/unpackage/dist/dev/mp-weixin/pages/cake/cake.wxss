.rmd {
  width: 100%;
  margin: 0 auto;
  background-color: #f4f4f4;
}
.rmd .goods-nav {
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
  border-top: 1px solid #cdccd1;
  border-bottom: 1px solid #cdccd1;
}
.rmd .goods-nav .nav-item {
  width: 30%;
  height: 80rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  text-align: center;
  color: #aa8175;
}
.rmd .goods-nav .active {
  color: #ff0000;
  border-bottom: 1px solid #ff0000;
}
.rmd .rmd-content .rmd-item {
  border: 1px solid #f1f1f1;
  width: 90%;
  margin: 20rpx auto;
  background-color: white;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  padding: 20rpx;
  border-radius: 20rpx;
}
.rmd .rmd-content .rmd-item .rmd-img {
  width: 60%;
  height: 80%;
  vertical-align: middle;
}
.rmd .rmd-content .rmd-item .rmd-img image {
  width: 90%;
  height: 100%;
}
.rmd .rmd-content .rmd-item .rmd_text {
  width: 40%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.rmd .rmd-content .rmd-item .rmd_text .synopsis {
  font-size: 20rpx;
  color: #aa8175;
  display: block;
  width: 100%;
}
.rmd .rmd-content .rmd-item .rmd_text .title {
  font-size: 30rpx;
  color: #000000;
  width: 100%;
  height: 80rpx;
}
.rmd .rmd-content .rmd-item .rmd_text .price {
  text-align: left;
  margin-top: 5px;
  display: block;
  color: red;
  font-size: 20rpx;
  width: 100%;
  margin-top: 20rpx;
  height: 60rpx;
}
.rmd .rmd-content .isShow {
  width: 90%;
  margin: 0 auto;
  margin-top: -40rpx;
  padding: 20rpx;
  text-align: center;
  font-size: rbg(170, 129, 117);
  font-size: 30rpx;
  background-color: #FFFFFF;
}

